<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="org/apache/log4j/xml">

    <appender name="MyConsole" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <param name="Threshold" value="error" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{dd MMM yyyy HH:mm:ss,SSS} {%t} %-5p %c %x - %m%n" />
        </layout>
    </appender>

    <appender name="ViewAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="logs/View.log" />
        <param name="ImmediateFlush" value="true" />
        <param name="Append" value="false" />
        <param name="Threshold" value="info" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{dd MMM yyyy HH:mm:ss,SSS} {%t} %-5p %c %x - %m%n" />
        </layout>
    </appender>


    <!-- logger name must by package name! -->
    <logger name="pl.sudoku.view">
        <level value="info" />

        <appender-ref ref="ViewAppender" />
    </logger>


    <root>
        <level value="error" />
        <appender-ref ref="MyConsole" />
    </root>

</log4j:configuration>
